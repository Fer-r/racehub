{% extends 'base.html.twig' %}

{% block title %}RaceHub - Inicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="shortcut icon" href="{{ asset('resources/images/marathon_runner.png') }}" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Madimi+One&family=Lexend:wght@100..900&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: rgb(0, 255, 170);
            --secondary-color: rgb(0, 31, 61);
            --button-color: rgba(200, 255, 0, 0.8);
            --button-active-color: rgba(150, 200, 0, 0.8);
            --accent-color: rgba(0, 0, 30, 0.2);
        }

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Lexend", Arial, Helvetica, sans-serif;
            display: flex;
            flex-flow: column;
            min-height: 100vh;
            background-color: rgb(238, 238, 238);
        }

        nav {
            z-index: 2;
            top: 0;
            position: sticky;
            display: flex;
            flex-flow: row;
            background-color: var(--secondary-color);
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            height: 4em;
        }

        nav > div {
            flex-basis: 33%;
            display: flex;
            flex-flow: row;
            justify-content: center;
        }

        nav > div:nth-child(1) {
            justify-content: left;
        }

        nav > div:nth-child(3) {
            justify-content: right;
        }

        .nav_logo {
            font-size: 1.7rem;
            font-weight: bolder;
            color: whitesmoke;
            font-family: "Madimi One";
            letter-spacing: .6rem;
        }

        .icono_nav {
            width: 4rem;
            height: 3rem;
        }

        nav ul {
            display: flex;
            flex-flow: row;
            list-style: none;
        }

        nav li {
            margin-right: 3rem;
        }

        nav a {
            font-family: "Madimi One";
            color: whitesmoke;
            text-decoration: none;
            font-size: 1.4rem;
            transition: .2s;
        }

        nav a::after {
            content: "";
            width: 0px;
            height: 2px;
            display: block;
            background: whitesmoke;
            transition: .2s;
        }

        nav a:hover::after {
            width: 100%;
        }

        

        nav .btn {
            text-decoration: none;
            color: black;
            font-family: "Madimi One";
            font-size: 1rem;
            margin: 0 .5rem;
            padding: .5rem 1rem;
            background-color: var(--primary-color);
            border: 2px solid var(--secondary-color);
            border-radius: 2rem;
            transition: .2s;
        }

        nav .btn:hover {
            border-color: var(--primary-color);
            background-color: var(--secondary-color);
            color: whitesmoke;
            cursor: pointer;
        }

        header {
            font-size: .7rem;
            display: flex;
            flex-flow: row;
            font-weight: normal;
            height: 100vh;
            width: 100%;
            overflow: hidden;
            justify-content: space-evenly;
            align-items: center;
        }

        .hero_left {
            position: relative;
            overflow: hidden !important;
            width: 100%;
            height: 100%;
            background-color: var(--secondary-color);
        }

        .hero_left .backgrounds {
            height: 100%;
            width: 100%;
            position: absolute;
            background-size: cover;
            background-image:
                linear-gradient(to bottom, rgba(0, 31, 61, 0.75), var(--secondary-color)),
                url("{{ asset('images/bike_racing.jpg') }}");
            background-blend-mode: multiply;
            transition: opacity.6s;
        }

        .hero_left .content {
            height: 100%;
            color: whitesmoke;
            text-align: justify;
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            justify-content: center;
            padding: 0 5rem;
        }

        .hero_left > .content > h1 {
            z-index: 1;
            align-self: self-end;
            margin-bottom: 1rem;
            font-size: 2rem;
        }

        .hero_left > .content > p {
            z-index: 1;
            font-size: 1rem;
            font-weight: lighter;
        }

        .logo img {
            filter: brightness(.7);
            height: 30rem;
            margin-bottom: 1rem;
        }

        main {
            padding: 5rem 0;
        }

        main img {
            height: 50px;
            width: 50px;
            margin-bottom: 10px;
        }

        .companyInfo {
            display: flex;
            flex-flow: row;
            text-align: center;
        }


        .companyInfo > div {
            flex-basis: 33%;
            padding: 2rem;
            border-radius: 20px;
            margin: 0 2rem;
            display: flex;
            flex-flow: column;
            align-items: center;
            line-height: 1.2rem;
            transition: .2s;
            box-shadow: rgba(0, 0, 0, 0.2) 0px 0px 1px 1px;
            background-color: whitesmoke;
        }

        .companyInfo > div:hover {
            transform: translateY(-10px);
            box-shadow: rgba(0, 0, 0, 0.2) 1px 1px 3px 3px;
        }

        footer {
            background-color: var(--secondary-color);
            display: flex;
            flex-flow: row;
            color: white;
        }

        footer > div {
            padding: 1rem;
            flex-basis: 33%;
        }
        .about-section {
        text-align: center;
        padding: 4rem 0;
        max-width: 1200px;
        margin: 0 auto;
        color: var(--secondary-color);
        }
        .features-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            padding: 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: rgba(0, 0, 0, 0.2) 0px 0px 1px 1px;
            transition: transform 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: rgba(0, 0, 0, 0.2) 1px 1px 3px 3px;
        }

        .feature-card i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .stats-section {
            background-color: var(--secondary-color);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .stat-card h3 {
            font-size: 2.5rem;
            color: var(--primary-color);
        }

        .testimonials {
            padding: 4rem 0;
            background-color: whitesmoke;
        }

        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .testimonial-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 8px;
        }

        .testimonial-card img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .section-title {
            text-align: center;
            color: var(--secondary-color);
            margin-bottom: 2rem;
            font-family: "Madimi One";
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Barra de navegación -->
    <nav>
        <div>
            <a href="#"><img src="{{ asset('images/racehub.png') }}" alt="Logo" class = "icono_nav"></a>
        </div>
        <div class="nav_logo">RACEHUB</div>
        <div>
            <a href="{{ path('app_register_view') }}" class="btn btn-outline-primary">Registrarse</a>
            <a href="{{ path('app_login_view') }}" class="btn btn-primary">Iniciar Sesión</a>
        </div>
    </nav>

    <!-- Banner principal -->
    <header class="hero">
        <div class="hero_left">
            <div class="backgrounds"></div>
            <div class="content">
                <div class="logo">
                    <img src="{{ asset('images/racehub.png') }}" alt="Logo">
                </div>
                <h1>¡Bienvenido a RaceHub!</h1>
                <p>Descubre las mejores carreras y eventos deportivos...</p>
            </div>
        </div>
    </header>

    <!-- Sección de información -->
    <main>
        <section class="about-section">
            <h2 class="section-title">¿Qué es RaceHub?</h2>
            <p>RaceHub es tu plataforma integral para eventos deportivos al aire libre. Conectamos a deportistas, organizadores y entusiastas del deporte.</p>
        </section>

        <div class="companyInfo">
            <div>
                <img src="{{ asset('images/running-run.svg') }}" alt="Información">
                <h3>Running</h3><br/>
                <p>Los deportes de running son perfectos para todos los niveles de habilidad.</p>
            </div>
            <div>
                <img src="{{ asset('images/icon-bike.svg') }}" alt="Organización">
                <h3>Cycling</h3><br/>
                <p>Eventos de ciclismo de montaña y de ruta para todos los niveles.</p>
            </div>
            <div>
                <img src="{{ asset('images/trail-running-shoe.svg') }}" alt="Comunidad">
                <h3>Trail running</h3><br/>
                <p>Explora senderos y caminos desafiantes con nuestros eventos de trail running.</p>
            </div>
        </div>

        <section class="features-grid">
            <div class="feature-card">
                <i class="fas fa-calendar-alt"></i>
                <h4>Eventos Todo el Año</h4>
                <p>Calendario actualizado con los mejores eventos deportivos en toda España</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-users"></i>
                <h4>Comunidad Activa</h4>
                <p>Participa en actividades y comparte experiencias</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-medal"></i>
                <h4>Superación Diaria</h4>
                <p>Mantente en forma con carreras nuevas todos los días</p>
            </div>
        </section>

        <section class="stats-section">
            <h2 class="section-title" style="color: white;">RaceHub en Números</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>1000+</h3>
                    <p>Eventos Realizados</p>
                </div>
                <div class="stat-card">
                    <h3>50K+</h3>
                    <p>Participantes</p>
                </div>
                <div class="stat-card">
                    <h3>100+</h3>
                    <p>Organizadores</p>
                </div>
                <div class="stat-card">
                    <h3>15+</h3>
                    <p>Provincias</p>
                </div>
            </div>
        </section>

        <section class="testimonials">
            <h2 class="section-title">Lo que dicen nuestros usuarios</h2>
            <div class="testimonial-grid">
                <div class="testimonial-card">
                    <h4>María García</h4>
                    <p>"RaceHub ha transformado mi experiencia en carreras. ¡Ahora puedo encontrar todos los eventos en un solo lugar!"</p>
                </div>
                <div class="testimonial-card">
                    <h4>Carlos Martínez</h4>
                    <p>"Como organizador, la plataforma me facilita enormemente la gestión de eventos."</p>
                </div>
                <div class="testimonial-card">
                    <h4>Laura Sánchez</h4>
                    <p>"La comunidad es increíble. He conocido a muchos compañeros de entrenamiento gracias a RaceHub."</p>
                </div>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <div>18001, Granada </div>
        <div style="text-align: center;">RaceHub (C) 2025. Todos los derechos reservados</div>
        <div></div>
    </footer>

    <script>
    let index = 0;
    let backgroundUrls = [
        "{{ asset('images/bike_racing.jpg') }}",     
        "{{ asset('images/marathon.jpg') }}",     
        "{{ asset('images/trailrunning.jpg') }}"     
    ]
    function changeBackground(){
        index = (index+1)%backgroundUrls.length
        let currentBackground = backgroundUrls[index]
        let backgroundDiv = document.querySelector(".backgrounds");

        backgroundDiv.style.opacity = 0;

        setTimeout(() => {
        backgroundDiv.style.backgroundImage = `
                linear-gradient(to bottom, rgba(0, 31, 61, 0.75), var(--secondary-color)),
                url('${currentBackground}')
        `           
        backgroundDiv.style.opacity = 1;
        }, 600)

    }

    setInterval(changeBackground, 8000)

    </script>
{% endblock %}