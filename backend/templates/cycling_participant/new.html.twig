{% extends 'base.html.twig' %}

{% block title %}New Cycling Participant{% endblock %}

{% block body %}
    <div style="margin-bottom: 20px;">
        <a href="{{ path('app_cycling_participant_index_s') }}" class="btn-primary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="admin-container">
        <header>
            <h1 class="admin-title"><i class="fas fa-bicycle"></i> New Cycling Participant</h1>
        </header>

        <main>
            {{ form_start(form) }}
                {{ form_widget(form) }}
